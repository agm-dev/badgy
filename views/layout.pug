doctype html
html
  head
    title= `${title} | ${h.siteName}`
    link(rel="shortcut icon" type="image/png" href="/images/icons/badgy.png")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    .container-fluid(style="margin-top:20px")
      block header
        .row
          .nav
            each item in h.menu
              .col-xs-12.col-md-2
                a.btn.btn-default(href=item.slug) #{item.title}
            if user && user.gravatar
              .col-xs-12-col-md-2
                img(src=`${user.gravatar}` alt="profile-picture" width="50")
        
      block messages
        if locals.flashes
          .row
            .flash-messages
              - const categories = Object.keys(locals.flashes)
              each category in categories
                each message in flashes[category]
                  .flash.col-xs-12.col-md-6
                    p.flash__text!= message
                    button.flash__remove(onClick="this.parentElement.remove()") &times;
      .content.row
        block content

      block scripts
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
        script(src="/dist/App.bundle.js")
