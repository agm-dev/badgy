extends layout

block content
  .inner.col-xs-12.col-md-6
    form.form(action="/register" method="POST")
      h2 Register
      .form-group
        label(for="name") Name
        input.form-control(type="text" name="name")
      .form-group
        label(for="email") Email
        input.form-control(type="email" name="email")
      .form-group
        label(for="email-confirm") Confirm Email
        input.form-control(type="email" name="email-confirm")
      .form-group
        label(for="password") Password
        input.form-control(type="password" name="password")
      .form-group
        label(for="password-confirm") Confirm Password
        input.form-control(type="password" name="password-confirm")
      .form-group
        input.btn.btn-primary(type="submit" value="Register")
